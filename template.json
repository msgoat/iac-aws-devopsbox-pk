{
  "variables": {
    "aws_access_key": "{{env `AWS_ACCESS_KEY_ID`}}",
    "aws_secret_key": "{{env `AWS_SECRET_ACCESS_KEY`}}"
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "region": "eu-central-1",
      "source_ami": "ami-00a205cb8e06c3c4e",
      "instance_type": "t3.micro",
      "ssh_username": "ec2-user",
      "ami_name": "CloudTrain-DevOpsBox-1.2.2-{{isotime \"20060102\"}}.0.x86_64-hvm-eu-central-1-gp2-0",
      "tags": {
        "Organization": "msg systems ag",
        "Department": "Automotive Academy",
        "Project": "CloudTrain",
        "Maintainer": "Michael Theis (msg)",
        "OS_Version": "Amazon Linux 2",
        "Release": "Latest",
        "Base_AMI_Name": "{{ .SourceAMIName }}",
        "Extra": "{{ .SourceAMITags.TagName }}"
      }
    }
  ],
  "provisioners" : [
    {
      "type": "shell",
      "scripts": ["./scripts/init.sh", "./scripts/install_docker.sh"]
    }
  ]
}